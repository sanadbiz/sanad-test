<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="pe_login.retrieve_password_signup" inherit_id="pe_login.card_layout" primary="True">
        <xpath expr="//div[@id='register-card']/div[@id='card_id']" position="inside">
            <script src="/pe_login/static/src/js/retrive_password.js"/>
            <div class="welcome-message">
                <p>
                    تأكيد بريدك الإلكتروني
                    <span>&#8250;</span>
                </p>
            </div>
            <div class="enter_your_password">
                <p>
                    الرجاء إدخال الرمز المرسل إلى عنوان بريدك الإلكتروني
                </p>
            </div>
            <div class="box_container">
                <div class="box">
                    <input type="text" maxlength="1" placeholder=""/>
                </div>
                <div class="box">
                    <input type="text" maxlength="1" placeholder=""/>
                </div>
                <div class="box">
                    <input type="text" maxlength="1" placeholder=""/>
                </div>
                <div class="box">
                    <input type="text" maxlength="1" placeholder=""/>
                </div>
                <div class="box">
                    <input type="text" maxlength="1" placeholder=""/>
                </div>
                <div class="box">
                    <input type="text" maxlength="1" placeholder=""/>
                </div>
            </div>
            <div class="main_content">
                <a href="/web/profile_settings">
                    <button class="login-button">تأكيد</button>
                </a>
<!--                <button class="login-button">تأكيد</button>-->
            </div>
            <div class="below_hyperlinks">
                <div>
                    <a class="register_again" href="#">أرسل مرة أخرى</a>
                </div>
                <div>
                    <p class="didnt_receive_code">لم تتلق رسالة نصية قصيرة؟</p>
                </div>
            </div>
        </xpath>
    </template>
</odoo>